					</div>
				</div>
			</nav>

			<div class="container">
				<%if @error then %>
						<div class="alert alert-danger"><%=@error%></div>
				<% end %>
				<%= yield %>
			</div>
			
		</header>
	</div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->

	<script src="/vendor/js/jquery-3.5.1.min.js"></script>
	<script scr="/vendor/js/simplecolorpicker.js"></script>
	<script scr="/vendor/js/common.js"></script>
  </body>
</html>

